pipeline {
    agent any // Run on any available Jenkins agent

    stages {
        stage('Checkout') {
            steps {
                // Clones your full-stack project from the Git repo
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                // Navigate into the backend folder to run Maven
                dir('backend') {
                    echo 'Building the Spring Boot application...'
                    // Use 'bat' for Windows
                    bat 'mvnw clean package'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                // Navigate into the frontend folder to run npm
                dir('frontend') {
                    echo 'Building the React application...'
                    // Use 'bat' for Windows
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }

        stage('Run Application') {
            steps {
                // This 'parallel' block runs both servers simultaneously
                parallel (
                    "Backend": {
                        dir('backend') {
                            echo 'Starting Spring Boot server on port 8080...'
                            // 'start' runs the command in a new background window on Windows
                            bat 'start "Backend" java -jar target/*.jar'
                        }
                    },
                    "Frontend": {
                        dir('frontend') {
                            echo 'Starting React server on port 3000...'
                            // 'npx serve' is an easy way to serve the static 'build' folder
                            bat 'start "Frontend" npx serve -s build -l 3000'
                        }
                    }
                )
            }
        }
    }
}